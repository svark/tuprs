# tests: Dollar Expr shell,
# tests: ifeq and else ifeq and end
# tests: ifdef and ifndef and endif
TARGET_CPU := x86
TARGET_CPU_IS_X86 := 0
ifeq ($(TARGET_CPU),x86)
  TARGET_CPU_IS_X86 := 1
else ifeq ($(TARGET_CPU),x86_64)
  TARGET_CPU_IS_X86 := 1
else
  TARGET_CPU_IS_X86 := 0
endif

ifeq ($(TARGET_CPU_IS_X86),1)
  CFLAGS += -m32
  USE_SSE2 = 1
endif

ifdef USE_SSE2
  ifeq ($(TARGET_CPU_IS_X86),0)
    $(error USE_SSE2 is only supported on x86)
  endif
  CFLAGS += -msse
else
    CFLAGS += -mno-sse
endif
ifndef USE_SSE2
  CFLAGS += -mno-sse
endif

FOUND_UNKNOWN := $(wildcard unknownfile)

ifdef FOUND_UNKNOWN
  F := unknownfile exists
endif

$(info TARGET_CPU_IS_X86=$(TARGET_CPU_IS_X86))

